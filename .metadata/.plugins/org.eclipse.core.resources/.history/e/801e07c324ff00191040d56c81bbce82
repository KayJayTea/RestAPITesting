		RestAssured.baseURI = "http://localhost:8080";
		RestAssured.basePath = "/student/list";
		
		RequestSpecification requestSpecs = new RequestSpecBuilder().build();
		RestAssured.requestSpecification = requestSpecs;
	}
	
